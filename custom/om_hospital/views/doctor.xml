<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="is_child"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="capitalized_name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctors.tree</field>
        <field name="model">hospital.doctors</field>
        <!--        <field name="type">tree</field>-->
        <field name="arch" type="xml">
            <tree>
                <field name="ref"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctors.search</field>
        <field name="model">hospital.doctors</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike', self)]"/>
                <field name="ref"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
<!--                <field name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>-->
<!--                <field name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>-->
<!--                <field name="filter_others" string="Others" domain="[('gender', '=', 'others')]"/>-->
<!--                <seperator/>-->
<!--                <field name="filter_childs" string="Childs" domain="[('is_child', '=', True)]"/>-->
            </search>
        </field>
    </record>

    <record id="action_hospital_doctors" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctors</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="om_hospital.view_hospital_doctors_search"/>
    </record>

     <menuitem
            id="menu_hospital_doctors"
            name="doctors"
            parent="menu_hospital_root"
            action="action_hospital_doctors"
            sequence="10"/>
</odoo>